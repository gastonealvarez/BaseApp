<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.firebase.quickstart.database">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.app.firebase.quickstart.database.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity android:name="com.app.firebase.quickstart.database.NewPostActivity" />
        <activity android:name="com.app.firebase.quickstart.database.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.app.firebase.quickstart.database.PostDetailActivity" />
        <activity android:name="com.app.firebase.quickstart.database.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.firebase.quickstart.database.RegisterActivity"
            android:label="@string/register_activity_name"></activity>
        <activity android:name="com.app.firebase.quickstart.database.RecoveryActivity"
            android:label="@string/olvidaste_tu_pass">

        </activity>
    </application>

</manifest>